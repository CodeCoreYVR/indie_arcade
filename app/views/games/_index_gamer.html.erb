<h1 class="text">All Games</h1>
<% if @games.present? %>
  <div class="row">
    <% @games.each do |g|  %>
    <div class="col-md-4">

        <div class="panel-result col-md-12">
          <div class="col-md-12">
            <div class="img">
              <%= display_picture g %>
            </div>
          </div>
          <div class="col-md-12 text-center">
              <h3><%= link_to g.title, game_path(g), class: "game-title" %></h3>
              <div>
                  <p class="gamer-details-author">made by:
                      <%= link_to g.user.company, user_path(g.user) %></p>
                  <hr style="border-color: #333;">
                  <% g.tags.each do |t| %>
                  <p class="tag-boxes">
                      <%= t.name %>
                  </p>
                  <% end %>

              </div>
          </div>
          <p class="game-status status text-center" style="color: #45A056; font-weight: bold; margin-top: 15px;"><%= g.status.name %></p>
        </div>
      </div>

    <% end %>
  </div>
<% else %>
  <h1>There are no matches for your search</h1>
<% end %>
<%= paginate @games %>
