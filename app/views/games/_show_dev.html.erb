<div class="container">
  <h1 style="font-weight:bold; margin-bottom: 20px; color: #EF7030;">Game Title: <%= @game.title %></h1>
  <h3>General Ratings: <%= @game.reviews_count %> feedbacks</h3>
<%= link_to 'edit game', edit_game_path, class: "orange" %>
|
  <%= link_to 'download pdf', game_review_path(@game.id), class: "orange"%> | <%= link_to 'download game', @game.attachment_url, class: "orange"%>
  <div style="text-align: center"><h3>Overview</h3></div>
  <h3><%= pluralize @game.reviews_count, "Plays" %></h3>
  <% if @game.reviews_count > 0 %>
    <h4>Fun</h4>
    <div class="progress">
      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow=""
      aria-valuemin="0" aria-valuemax="100" style="width:<%= @game.average_score_for(:fun) %>%">
        <%= @game.average_score_for(:fun) %>%
      </div>
    </div>
    <h4>Playability</h4>
    <div class="progress">
      <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow=""
      aria-valuemin="0" aria-valuemax="100" style="width:<%= @game.average_score_for(:playability) %>%">
        <%= @game.average_score_for(:playability) %>%
      </div>
    </div>
    <h4>Difficulty</h4>
    <div class="progress">
      <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70"
      aria-valuemin="0" aria-valuemax="100" style="width:<%= @game.average_score_for(:difficulty) %>%">
        <%= @game.average_score_for(:difficulty) %>%
      </div>
    </div>
  <% else %>
    <h4>No Review Data</h4>
  <% end %>
  <a class="orange" href="#">Download crash logs</a>
  <div class="back-btn-update"><%= link_to '<<Back', games_path %></div>
</div>
