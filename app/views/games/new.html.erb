<p>
  Note: Game must meet the following minimum hardware specs. Every
  game will be tested. If it cannot be run, it will be rejected.
</p>

<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :picture %>
    <%= f.collection_select(:tag_ids, Tag.all, :id, :name,
                            {},
                            { multiple: true, class: 'chosen-select' }) %>
    <%= f.input :link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script>
  $('.chosen-select').chosen({});
</script>
