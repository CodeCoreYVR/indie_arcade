<!DOCTYPE html>
<html>
    <head>
        <title>IndieArcade</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <link href="https://fonts.googleapis.com/css?family=Prompt" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
    </head>

    <body>

        <!-- NAV BAR -->
        <nav class="navbar navbar-custom navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div id="logo-container">
                        <a class="navbar-left" href="<%= root_path %>">
                            <%= image_tag "logo.png" %>
                        </a>
                    </div>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <%= link_to "Games", root_path %>
                        </li>
                        <li>
                            <%= link_to "Log-in", root_path %>
                        </li>
                        <li>
                            <%= link_to "Register", root_path %>
                        </li>
                        <!-- PLACEHOLDER - BROWSE FOR GAMES -->
                        <li class="game-search">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-search" id="search"></span>
                            </a>
                            <form id="search-wrapper">
                                <input type="text" class="form-control" placeholder="Search for a game or a studio" id="search-bar">
                                <button type="submit" class="btn btn-default" style="display: none">Submit</button>
                            </form>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        <!-- End of NAVBAR -->

        <%= yield %>

        <hr style="margin-top:0px;">

        <!-- Footer -->
        <div class="home-footer">
            <div class="home-footer-left">
                <div><%= image_tag "logo.png" %></div>
                <div><%= link_to "About", root_path %></div>
                <div><%= link_to "Contact", root_path %></div>
                <div><%= link_to "FAQ", root_path %></div>
            </div>

            <div class="home-footer-right">
                <div>WEBSITE MADE BY:</div>
                <div><%= image_tag "json-squad-logo.png", class: "json-logo" %></div>
                <div><%= image_tag "codecore-logo.png", class: "codecore-logo" %></div>
            </div>
        </div>

        </body>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </html>
