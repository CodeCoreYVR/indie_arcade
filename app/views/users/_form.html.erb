<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs register-form-control">
    <%= f.input :company, label: 'Company Name' %>
    <%= f.input :email, label: 'Email Address' %>
    <%= f.input :password, label: 'Password' %>
    <%= f.input :password_confirmation, label: 'Confirm Password' %>
    <%= f.input :employees, label: 'Number of Employees' %>
    <%= f.input :genres, label: 'Genre' %>
    <%= f.input :website, label: 'Website' %>
    <%= f.input :twitter, label: 'Twitter' %>
  </div>

<div class="control-group">
  <div class="attach-set text-center">
    <%= f.input :logo, input_html: { class: 'hidden-input' }, label: 'Upload company logo'%>
    <div class="input-append">
      <input id="file-display" class="input-large uneditable-input" type="text">
      <a id="upload-btn" class="btn"><i class="icon-upload-alt"></i>Upload</a>
    </div>
  </div>
</div>

  <div class="form-actions register-form-group">
    <%= f.button :submit, value: "Signup", class: "btn btn-default register-button" %>
  </div>
<% end %>
